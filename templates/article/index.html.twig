{% extends 'base.html.twig' %}

{% block title %}Article index
{% endblock %}

{% block body %}
	<h1>Article index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Titre</th>
				<th>Contenue</th>
				<th>Active</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for article in articles %}
				<tr>
					<td>{{ article.id }}</td>
					<td>{{ article.titre }}</td>
					<td>{{ article.contenue |u.truncate(20,'...',false)}}</td>

					<td>{{ article.active ? 'Yes' : 'No' }}</td>
					<td>
						<a href="{{ path('article_show', {'id': article.id}) }}">show</a>
						<a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('article_new') }}">Create new</a>
{% endblock %}
