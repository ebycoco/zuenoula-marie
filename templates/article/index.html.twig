{% extends 'AdminBase1.html.twig' %}

{% block title %}Article index
{% endblock %}

{% block body %}

	<div
		class="container-fluid">
		<!-- Page Heading -->
		<div class="d-sm-flex align-items-center justify-content-between mb-4">
			<h1 class="h3 mb-0 text-gray-800">Article index</h1>

			<a href="{{ path('article_new') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">

				<i class="fas fa-plus fa-sm text-white-50"></i>
				Nouvel article</a>
		</div>

		<div class="card shadow mb-4">
			<div class="card-header py-3">
				<h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
			</div>
			<div class="card shadow mb-4">
				<div class="card-body">
					<div class="table-responsive">
						<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
							<thead>
								<tr>
									<th>Id</th>
									<th>Titre</th>
									<th>Contenue</th>
									<th>Active</th>
									<th>actions</th>
								</tr>
							</thead>
							<tbody>
								{% for article in articles %}
									<tr>
										<td>{{ article.id }}</td>
										<td>{{ article.titre|u.truncate(20,'...',false)|raw }}</td>
										<td>{{ article.contenue|u.truncate(20,'...',false)|raw}}</td>
										<td>
											<input type="checkbox" id="switch{{ article.id}}" switch="bool" {% if article.active %} checked {% endif %} data-id=" {{ article.id}} "/>

											<label for="switch{{ article.id}}" data-on-label="Yes" data-off-label="No"></label>


										</td>

										<td>
											<a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-warning btn-icon-split">

												<span class="icon text-white-50">
													<i class="fas fa-eye"></i>
												</span>
												<span class="text">Voir</span>
											</a>
											<a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-primary btn-icon-split">
												<span class="icon text-white-50">
													<i class="fas fa-pen" aria-hidden="true"></i>
												</span>
												<span class="text">Modifier</span>
											</a>

										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="5">no records found</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>

	</div>

{% endblock %}
{% block javascripts %}{% endblock %}
