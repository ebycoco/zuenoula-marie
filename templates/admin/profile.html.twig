{% extends 'AdminBase1.html.twig' %}

{% block title %}Admin - Mairie de Zuenoula
{% endblock %}


{% block body %}
	<!-- Begin Page Content -->
	<div class="container-fluid">
		{% for message in app.flashes('success') %}
			<div class="alert alert-success alert-dismissible fade show" role="alert">
				<strong>Bien jouer !</strong>
				{{ message }}
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
		{% endfor %}
		{% for message in app.flashes('info') %}
			<div class="alert alert-info alert-dismissible fade show" role="alert">
				<strong>Pour votre information !</strong>
				{{ message }}
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
		{% endfor %}
		{% for message in app.flashes('danger') %}
			<div class="alert alert-danger alert-dismissible fade show" role="alert">
				<strong>Attention !</strong>
				{{ message }}
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
		{% endfor %}
		{% for message in app.flashes('warning') %}
			<div class="alert alert-warning alert-dismissible fade show" role="alert">
				<strong>Attention !</strong>
				{{ message }}
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
		{% endfor %}
		<!-- Page Heading -->
		<div class="d-sm-flex align-items-center justify-content-between mb-4">
			<h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
			<a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
				<i class="fas fa-download fa-sm text-white-50"></i>
				Generate Report</a>
		</div>

		<!-- Content Row -->
		<div
			class="row">

			<!-- Earnings (Monthly) Card Example -->
			<div class="col-xl-3 col-md-6 mb-4">
				<div class="card border-left-primary shadow h-100 py-2">
					<div class="card-body">
						<div class="row no-gutters align-items-center">
							<div class="col mr-2">
								<div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
									Earnings (Monthly)</div>
								<div class="h5 mb-0 font-weight-bold text-gray-800">$40,000</div>
							</div>
							<div class="col-auto">
								<i class="fas fa-calendar fa-2x text-gray-300"></i>
							</div>
						</div>
					</div>
				</div>
			</div>

			<!-- Earnings (Monthly) Card Example -->
			<div class="col-xl-3 col-md-6 mb-4">
				<div class="card border-left-success shadow h-100 py-2">
					<div class="card-body">
						<div class="row no-gutters align-items-center">
							<div class="col mr-2">
								<div class="text-xs font-weight-bold text-success text-uppercase mb-1">
									Earnings (Annual)</div>
								<div class="h5 mb-0 font-weight-bold text-gray-800">$215,000</div>
							</div>
							<div class="col-auto">
								<i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
							</div>
						</div>
					</div>
				</div>
			</div>

			<!-- Earnings (Monthly) Card Example -->
			<div class="col-xl-3 col-md-6 mb-4">
				<div class="card border-left-info shadow h-100 py-2">
					<div class="card-body">
						<div class="row no-gutters align-items-center">
							<div class="col mr-2">
								<div class="text-xs font-weight-bold text-info text-uppercase mb-1">Articles
								</div>
								<div class="row no-gutters align-items-center">
									<div class="col-auto">
										<div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">30</div>

									</div>
									<div class="col">
										<div class="progress progress-sm mr-2">
											<div class="progress-bar bg-info" role="progressbar" style="width: 30" aria-valuemin="0" aria-valuemax="100"></div>


										</div>
									</div>
								</div>
							</div>
							<div class="col-auto">
								<i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
							</div>
						</div>
					</div>
				</div>
			</div>

			<!-- Pending Requests Card Example -->
			<div class="col-xl-3 col-md-6 mb-4">
				<div class="card border-left-warning shadow h-100 py-2">
					<div class="card-body">
						<div class="row no-gutters align-items-center">
							<div class="col mr-2">
								<div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
									Pending Requests</div>
								<div class="h5 mb-0 font-weight-bold text-gray-800">18</div>
							</div>
							<div class="col-auto">
								<i class="fas fa-comments fa-2x text-gray-300"></i>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div
			class="row">

			<!-- Content Column -->
			<div class="col-lg-3 mb-4">
				>

				<!-- Project Card Example -->
				<div class="card border-bottom-info shadow mb-4">

					<div class="card-header py-3">
						<h6 class="m-0 font-weight-bold text-primary">Votre photo de profile</h6>
					</div>
					<div class="card-body">
						{% if app.user.imageName  %}
							<img class="card-img img-fluid" src="{{ vich_uploader_asset(app.user, 'imageFile')}}" width="700" height="433" alt="{{app.user.pseudo}}">
						{% else %}
							<img class="card-img img-fluid" src="{{asset('img/undraw_profile.svg')}}" width="700" height="433" alt="{{ app.user.pseudo }}"/>

						{% endif %}

						<p class="card-text text-center mt-3">
							<small class="text-muted">{{app.user.pseudo}}</small>
						</p>

					</div>
				</div>
			</div>
			<div
				class="col-lg-9 mb-4">
				<!-- Project Card Example -->
				<div class="card border-left-warning border-bottom-warning shadow mb-4">

					<div class="card-header py-3">
						<h6 class="m-0 font-weight-bold text-primary">Modifier mon profil</h6>

					</div>

					<div class="card-body ml-2">
						<div class="card-body">
							<div class="row">
								<div class="col">
									<div class="form-group row mr-1">
										<label for="disabledInput">Nom</label>
										<input class="form-control" id="disabledInput" type="text" placeholder="{{app.user.nom}}" disabled>
									</div>
									<div class="form-group row mr-1">

										<label for="disabledInput1">Pseudo</label>


										<input class="form-control" id="disabledInput1" type="text" placeholder="{{app.user.pseudo}}" disabled>


									</div>
								</div>
								<div class="col">
									<div class="form-group row">

										<label for="disabledInput">Prenom</label>

										<input class="form-control" id="disabledInput" type="text" placeholder="{{app.user.prenom}}" disabled>

									</div>
									<div class="form-group row">
										<label for="disabledInput1">Ville</label>

										<input class="form-control" id="disabledInput1" type="text" placeholder="{{app.user.ville}}" disabled>

									</div>
								</div>
							</div>
							<div class="row">
								<div class="col">
									<div class="form-group row mr-1">
										<label for="disabledInput">E-mail</label>
										<input class="form-control" id="disabledInput" type="text" placeholder="{{app.user.email}}" disabled>
									</div>
									<div class="form-group row mr-1">

										<label for="disabledInput1">Facebook</label>

										<input class="form-control" id="disabledInput1" type="text" placeholder="{{app.user.facebook}}" disabled>
									</div>
								</div>
								<div class="col">
									<div class="form-group row">

										<label for="disabledInput">Sexe</label>
										{% if app.user.sexe =="0" %}
											<input class="form-control" id="disabledInput" type="text" placeholder="M" disabled>
										{% elseif app.user.sexe =="1" %}
											<input class="form-control" id="disabledInput" type="text" placeholder="Mme" disabled>


										{% elseif app.user.sexe =="2" %}
											<input class="form-control" id="disabledInput" type="text" placeholder="Mlle" disabled>


										{% elseif app.user.sexe =="3" %}
											<input class="form-control" id="disabledInput" type="text" placeholder="M et Mme" disabled>

											{% else %}
										{% endif %}
									</div>
									<div class="form-group row">
										<label for="disabledInput1">Twitter</label>
										<input class="form-control" id="disabledInput1" type="text" placeholder="{{app.user.twitter}}" disabled>


									</div>
								</div>
							</div>
							<div class="row">
								<div class="col">
									<div class="form-group row mr-1">
										<label for="disabledInput">Youtube</label>
										<input class="form-control" id="disabledInput" type="text" placeholder="{{app.user.youtube}}" disabled>

									</div>
									<div class="form-group row mr-1">

										<label for="disabledInput1">Contact</label>
										<input class="form-control" id="disabledInput1" type="text" placeholder="{{app.user.contact}}" disabled>

									</div>
								</div>
								<div class="col">
									<div class="form-group row">

										<label for="disabledInput">Instagrame</label>

										<input class="form-control" id="disabledInput" type="text" placeholder="{{app.user.instagrame}}" disabled>

									</div>
									<div class="form-group row">
										<label for="disabledInput1">Profession</label>
										<input class="form-control" id="disabledInput1" type="text" placeholder="{{app.user.profession}}" disabled>
									</div>
								</div>
							</div>

							<div class="text-center">
								<a href="#" class="btn btn-primary waves-effect waves-light" data-toggle="modal" data-target="#modal1" type="button">
									<i class="fas fa-edit"></i>
									Cliqu√© pour modifier
								</a>
							</div>
						</div>
						<div class="modal fade" id="modal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
							<div class="modal-dialog" role="document">
								<div class="modal-content">
									<div class="modal-header">
										<h5 class="modal-title mt-0">Modifier le profil</h5>
										<button type="button" class="close" data-dismiss="modal" aria-label="Close">
											<span aria-hidden="true">&times;</span>
										</button>
									</div>
									<div class="modal-body">
										{{ form_start(userForm) }}
										<div class="card profil">
											<div class="card-body">
												{{form(userForm)}}
													<div class="modal-footer">
														<button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
													</div>
												</div>
											</div>
										</div>
									</div>
									<!-- /.modal-content -->
								</div>
								<!-- /.modal-dialog -->
							</div>
							<!-- /.modal -->
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- /.container-fluid -->
		{% block javascripts %}
			<!-- Page level plugins -->
			<script src="{{asset('vendor/chart.js/Chart.min.js')}}"></script>
			<!-- Page level custom scripts -->
			<script src="{{asset('js/demo/chart-area-demo.js')}}"></script>

			<script src="{{asset('js/demo/chart-pie-demo.js')}}"></script>
		{% endblock %}

	{% endblock %}
