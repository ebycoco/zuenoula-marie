{% extends 'AdminBase1.html.twig' %}


{% block title %}Article
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="d-sm-flex align-items-center justify-content-between mb-4">
			<h1 class="h3 mb-0 text-gray-800">{{ article.titre }}</h1>

			<a href="{{ path('admin_article_index') }}" class="btn btn-info">Retour</a>

			<a href="{{ path('admin_article_edit', {'id': article.id}) }}" class="btn btn-primary btn-icon-split">

				<span class="icon text-white-50">
					<i class="fas fa-pen" aria-hidden="true"></i>
				</span>
				<span class="text">Modifier</span>
			</a>


			{{ include('admin/article/_delete_form.html.twig') }}

		</div>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ article.id }}</td>
				</tr>
				<tr>
					<th>Image</th>
					<td>
						{% if article.imageName %}
							<img src="{{ vich_uploader_asset(article, 'imageFile')|imagine_filter('article_admin')}}" alt="image de {{ article.titre }}"/>
						{% else %}
							<img src="{{asset('assets/images/users/user-4.jpg')}}" width="100" height="15" alt="{{ article.title}}"/>
						{% endif %}

					</td>
				</tr>

				<tr>
					<th>Titre</th>
					<td>{{ article.titre }}</td>
				</tr>
				<tr>
					<th>Contenue</th>
					<td>{{ article.contenue|raw }}</td>
				</tr>
				<tr>
					<th>Active</th>
					<td>{{ article.active ? 'Yes' : 'No' }}</td>
				</tr>
			</tbody>
		</table>


	</div>
	<!-- /.container-fluid -->


{% endblock %}
