<form method="post" action="{{ path('admin_sport_delete', {'id': sport.id}) }}" onsubmit="return confirm('Etre vous sûr de vouloir supprimer le sport numéro {{ sport.id }} ?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sport.id) }}">
	<button class="btn btn-danger btn-icon-split">
		<span class="icon text-white-50">
			<i class="fas fa-trash"></i>
		</span>
		<span class="text">Supprimer</span>
	</button>
</form>
