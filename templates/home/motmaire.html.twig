<div style=" background-color: #F60;">
	<h2 style="color: #000; padding:10px;" align="center" aiv="cls: aiv-slide-left; repeat;">

		<font size="3px">BIENVENUE  A ZUENOULA !</font>
	</h2>
</div>
<div style="color: #FFF; font-size:12px;text-align: justify;">
	{% for motmaire in motmaires %}
		<p>
			{% if motmaire.imageName %}
				<img class="img-responsive" src="{{ vich_uploader_asset(motmaire, 'imageFile')}}" alt="image de {{ motmaire.nom }}" style=" width:100px; border-width: 2px; border-style: solid;" aiv="cls: aiv-scale-up; repeat;delay: 500;"/>
				{% else %}
			{% endif %}


			<span class="text-text-lowercase" style="text-align: justify; line-height: 1.6em;" aiv="cls: aiv-slide-left; repeat;">{{ motmaire.nom }}</span>


		</p>
		<p aiv="cls: aiv-slide-up; repeat;delay: 1000;">
			{{ motmaire.contenue|raw }}
		</p>
	{% endfor %}
</div>
